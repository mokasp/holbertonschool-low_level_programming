#include <stdio.h>
#include "main.h"

/**
 * print_to_98 - count to 98
 * @n: start number
 *
 * Return: Always 0 (Success)
 */

void print_to_98(int n)
{
	int x;

	if (n > 99)
	{
		for (x = n; x >= 98; x--)
			printf("%d, ", x);
	}
	else if (n < 99)
	{
		for (x = n; x <= 98; x++)
			printf("%d, ", x);
	}
	else
	{
		for (x = n; x == 98; x++)
			printf("%d\n", x);
	}
}
